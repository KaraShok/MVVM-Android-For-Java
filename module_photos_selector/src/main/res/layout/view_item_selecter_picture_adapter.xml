<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="1dp">

    <com.karashok.library.module_util.widget.SquareImageView
        android:id="@+id/view_picture_selector_adapter_image_siv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:scaleType="centerCrop"/>

    <com.karashok.library.module_util.widget.SquareImageView
        android:id="@+id/view_picture_selector_adapter_masking_siv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#111212"/>

    <ImageView
        android:id="@+id/view_picture_selector_adapter_select_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="top|right"
        android:padding="5dp"
        android:src="@drawable/icon_image_unselect"/>
</FrameLayout>